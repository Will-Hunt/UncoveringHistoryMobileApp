<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Routes">

    <ListView
        android:id="@+id/historical_site_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/clear_route"
        android:padding="5dp" >

    </ListView>

    <Button
        android:id="@+id/clear_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_route"
        android:layout_marginBottom="0dp"
        android:text="@string/clear_historical_route" />

    <Button
        android:id="@+id/create_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_marginBottom="0dp"
        android:text="@string/create_historical_route" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/color_primary_background"
        app:itemIconTint="@color/color_primary_text"
        app:itemTextColor="@color/color_primary_text"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>